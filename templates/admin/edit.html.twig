<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Dashboard Admin
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}"/>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
		{% endblock %}

	</head>
	<body>
		{% block body %}
        {% set route = app.request.attributes.get('_route') %}
			<input
			type="checkbox" id="check">
			<!--header area start-->
			<header>
				<label for="check">
					<i class="fas fa-bars" id="sidebar_btn"></i>
				</label>
				<div class="left_area">
					<h3>Repare Pc<span>
							BY</span>
					</h3>
				</div>
				<div class="right_area">
					<a href="{{ path('app_logout') }}" class="logout_btn">
						<i class="fas fa-sign-out-alt"></i>Déconnexion</a>
				</div>
			</header>
			<!--header area end-->
			<!--mobile navigation bar start-->
			<div class="mobile_nav">
				<div class="nav_bar">
					<img src="/images/logo.svg" class="mobile_profile_image" alt="">
					<i class="fa fa-bars nav_btn"></i>
				</div>
				<div class="mobile_nav_items">
					<a href="{{ path('app_admin') }}">
						<i class="fas fa-cogs"></i>
						<span>Dashboard</span>
					</a>
					<a href="{{ path('app_map_create') }}">
						<i class="fas fa-desktop"></i>
						<span>Nouveau Centre</span>
					</a>
					<a href="{{ path('app_home') }}">
						<i class="fas fa-globe-europe"></i>
						<span>Accueil</span>
					</a>
					<a href="{{ path('app_logout') }}">
						<i class="fas fa-sign-out-alt"></i>Déconnexion</a>
				</div>
			</div>
			<!--mobile navigation bar end-->
			<!--sidebar start-->
			<div class="sidebar">
				<div class="profile_info">
					<img src="/images/logo.svg" class="profile_image" alt="">
					<h4>{{ app.user.username }}</h4>
				</div>
				<a href="{{ path('app_admin') }}">
					<i class="fas fa-cogs"></i>
					<span>Dashboard</span>
				</a>
				<a href="{{ path('app_map_create') }}">
					<i class="fas fa-desktop"></i>
					<span>Nouveau Centre</span>
				</a>
				<a href="{{ path('app_home') }}">
					<i class="fas fa-globe-europe"></i>
					<span>Accueil</span>
				</a>
			</div>
			<!--sidebar end-->

			<div class="content">
				<div class="card">
                    {% if route == 'app_map_edit' %}
                        <h1>Editer le centre</h1>
                    {% else %}
                        <h1>Ajouter un centre</h1>
                    {% endif %}
                    {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-grid gap-2 mt-4">
                {% if route == 'app_map_edit' %}
                    <button type="submit" class="btn btn-danger" formnovalidate>Modifier</button>
                {% else %}
                    <button type="submit" class="btn btn-danger" formnovalidate>Ajouter le centre</button>
                {% endif %}
                </div>
                {{ form_end(form) }}
                </div>
            </div>
				<script type="text/javascript">
					$(document).ready(function () {
$('.nav_btn').click(function () {
$('.mobile_nav_items').toggleClass('active');
});
});
				</script>

			{% endblock %}
		</body>
	</body>
</html>
