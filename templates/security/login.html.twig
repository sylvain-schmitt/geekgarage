{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
        <form method="post">
            <div class="bg-img">
            <div class="content">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="pass">
                    Vous êtes connecter en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}
                <header>Connexion</header>
                <div class="field">
                    <span class="fa fa-user"></span>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" required placeholder="Nom d'utilisateur">
                </div>
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input type="password" name="password" id="inputPassword" class="pass-key" required placeholder="mot de passe">
                </div>
                 <div class="pass">
                 <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="field">
                    <input type="submit" value="connexion">
                </div>
            </div>
            </div>
        </form>
{% endblock %}