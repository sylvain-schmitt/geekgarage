<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
        <link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css" />
        <link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css" />
        {{ encore_entry_link_tags('app') }}
    {% endblock %}


</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">GeekGarage</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if    app.request.get('_route')  == 'app_admin'    %}
                <li class="nav-item">
{#                    <a class="nav-link active" aria-current="page" href="{{ path('app_map_edit') }}">Modif Carte</a>#}
                </li>
                    <li>
                        <a class="nav-link active}" aria-current="page" href="{{ path('app_user_edit') }}">Gestion User</a>
                    </li>
                    <li>
                        <a class="nav-link active" aria-current="page" href="{{ path('app_map_create') }}">Ajouter un centre</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<div class="container">
{% block body %}
{% endblock %}
</div>
{% block javascripts %}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"></script>
    <script src='https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js'></script>
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
</body>
</html>
