{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
    <div class="container">
    <div class="text-center mb-5">
    {% if app.request.attributes.get('_route') == 'app_map_edit' %}
        <h1>Editer le centre</h1>
    {% else %}
        <h1>Ajouter un centre</h1>
    {% endif %}
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {% if app.request.attributes.get('_route') == 'app_map_edit' %}
        <button type="submit" class="btn btn-primary mt-2" formnovalidate>Modifier</button>
    {% else %}
        <button type="submit" class="btn btn-primary  mt-2" formnovalidate>Ajouter le centre</button>
    {% endif %}
    {{ form_end(form) }}
    </div>

{% endblock %}
