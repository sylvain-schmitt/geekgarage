{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>
        <div class="col-lg-4 col-md-6 col-sm-8 mx-auto my-5">
            <div class="card rounded shadow p-5">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-outline-danger mt-3">Register</button>
                </div>
            {{ form_end(registrationForm) }}
            </div>
        </div>
{% endblock %}
